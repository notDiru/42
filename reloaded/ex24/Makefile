NAME = libft.a
CC = gcc
CFLAGS = -Wall -Werror -Wextra
SRC = ./srcs/*
HEADER = ./includes/*
OBJ = $(SRC:.c=.o)

all: $(NAME)

$(NAME): $(OBJ)

%.o: %.c $(HEADER)
	$(CC) $(CFLAGS) -c $< -o $@

clean:
	rm -f $(OBJ)

fclean: clean
	rm -f $(NAME)

re: fclean all

.PHONY: all clean fclean re
